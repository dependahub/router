{
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"**/*.spec.js",
		"**/*.test.js"
	],
	"compilerOptions": {
		"rootDir": "./src",
		"baseUrl": "./src",
		"declarationDir": "./@types",
		"moduleResolution": "nodenext",
		"target": "ESNext",
		"module": "NodeNext",
		"lib": [
			"esnext"
		],
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true
	}
}